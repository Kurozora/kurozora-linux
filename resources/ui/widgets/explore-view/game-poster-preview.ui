<interface>
    <object class="GtkBox" id="container-box">
        <child>
            <object class="GtkOverlay">
                <child type="overlay">
                    <object class="GtkBox" id="loading-overlay">
                        <property name="css-classes">featured-show-preview-loading</property>
                    </object>
                </child>
                <child>
                    <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">10</property>
                        <property name="homogeneous">true</property>
                        <child>
                            <!--Poster Preview-->
                            <object class="GtkPicture" id="poster-preview">
                                <property name="css-classes">game-poster-preview-picture</property>
                                <property name="content-fit">GTK_CONTENT_FIT_COVER</property>
                                <property name="file">resource://kurozora/ui/placeholders/game_poster.jpg</property>
                            </object>
                        </child>
                        <child>
                            <!--Extra Infos-->
                            <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="spacing">5</property>
                                <child>
                                    <!--Title-->
                                    <object class="GtkLabel" id="game-title">
                                        <property name="css-classes">entry-poster-preview-title</property>
                                        <property name="label">placeholder</property>
                                        <property name="halign">start</property>
                                        <property name="ellipsize">PANGO_ELLIPSIZE_END</property>
                                        <property name="lines">2</property>
                                        <property name="max-width-chars">22</property>
                                        <property name="wrap">true</property>
                                        <property name="wrap-mode">PANGO_WRAP_WORD_CHAR</property>
                                    </object>
                                </child>
                                <child>
                                    <!--Tagline-->
                                    <object class="GtkLabel" id="game-subtitle">
                                        <property name="css-classes">entry-poster-preview-subtitle</property>
                                        <property name="label">placeholder</property>
                                        <property name="halign">start</property>
                                        <property name="ellipsize">PANGO_ELLIPSIZE_END</property>
                                        <property name="lines">2</property>
                                        <property name="max-width-chars">22</property>
                                        <property name="wrap">true</property>
                                        <property name="wrap-mode">PANGO_WRAP_WORD_CHAR</property>
                                    </object>
                                </child>
                                <child>
                                    <!--Control Button-->
                                    <object class="GtkButton" id="control-button">
                                        <property name="label">Add</property>
                                        <property name="vexpand">true</property>
                                        <property name="valign">end</property>
                                        <property name="hexpand">false</property>
                                        <property name="halign">start</property>
                                        <property name="sensitive">false</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>